<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <EditText
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:backgroundTintMode="src_in"
            android:id="@+id/data_nim_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nim"
            android:layout_marginVertical="3dp"
            android:inputType="number"
            android:enabled="false"
            android:autofillHints="@string/nim_nip_hint_registrasi" />

        <EditText
            android:backgroundTintMode="src_in"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/data_nama_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama"
            android:layout_marginVertical="3dp"
            android:inputType="textPersonName|textAutoComplete"
            android:enabled="false"
            android:autofillHints="@string/nama_account" />

        <TextView
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jurusan"
            android:layout_marginVertical="3dp"/>

        <Spinner
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/spinner_data_jurusan_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"/>

        <TextView
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textViewJurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Kampus"
            android:layout_marginVertical="3dp" />

        <Spinner
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/spinner_nama_kampus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp" />

        <TextView
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:id="@+id/textViewTempatLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:layout_marginVertical="3dp" />

        <Spinner
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/spinner_tempat_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp" />

        <EditText
            android:textColorHint="@color/colorAccent"
            android:backgroundTintMode="src_in"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/data_tanggal_lahir_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Lahir"
            android:focusableInTouchMode="false"
            android:layout_marginVertical="3dp"
            android:autofillHints="Tanggal Lahir Pengajuan"/>
        <EditText
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorPrimaryDark"
            android:backgroundTintMode="src_in"
            android:id="@+id/data_alamat_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat lengkap"
            android:layout_marginVertical="3dp"
            android:inputType="textAutoComplete|textLongMessage"
            android:autofillHints="@string/alamat_hint_registrasi" />

    <LinearLayout
        android:paddingVertical="2dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_ajukan_surat"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajukan"/>
        <TextView
            android:id="@+id/text_view_batal_ajukan_surat"
            android:padding="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batal"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>