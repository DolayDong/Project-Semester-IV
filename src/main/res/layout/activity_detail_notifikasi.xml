<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.notifikasi.DetailNotifikasi">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view_detail_notofikasi">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pengajuan Surat Pernyataan"
                        android:textStyle="bold|italic"
                        android:gravity="center_horizontal"
                        android:textSize="17sp"
                        android:paddingVertical="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Biodata Pengaju"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:paddingVertical="2dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Nama"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_nama_pengaju"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Nama" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Nim"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_nim_pengaju"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Nim" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Alamat"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_alamat_pengaju"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Alamat" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Tempat/Tanggal Lahir"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_ttl_pengaju"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Ttl" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Jurusan"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_jurusan_pengaju"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Jurusan" />

                        </LinearLayout>

                        <TextView
                            android:paddingVertical="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Biodata Orang Tua / Wali Pengaju"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Nama Orang Tua"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_nama_orang_tua"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Jurusan" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Pekerjaan Orang Tua"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_pekerjaan_orang_tua"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Jurusan" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingVertical="5dp"
                                android:paddingStart="20dp"
                                android:layout_width="130dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="Alamat Orang Tua"
                                tools:ignore="RtlSymmetry" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : " />

                            <TextView
                                android:id="@+id/tv_value_alamat_orang_tua"
                                android:paddingHorizontal="1dp"
                                android:paddingVertical="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Value Jurusan" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingVertical="10dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Foto"
                            android:gravity="center_horizontal" />

                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:id="@+id/image_view_pengaju" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:paddingVertical="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_setujui"
                android:background="@color/colorPrimaryDark"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/warnaPutih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setujui" />

            <Button
                android:id="@+id/btn_abaikan"
                android:textColor="@color/warnaPutih"
                android:background="@color/warnaMerah"
                android:layout_marginHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abaikan" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>