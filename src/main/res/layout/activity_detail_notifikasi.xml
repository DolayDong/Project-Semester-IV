<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.notifikasi.DetailNotifikasi">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_detail_notofikasi">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan Surat Pernyataan"
                    android:textStyle="bold|italic"
                    android:gravity="center_horizontal"
                    android:textSize="17sp"
                    android:paddingVertical="20dp" />
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingVertical="5dp"
                            android:paddingStart="20dp"
                            android:layout_width="130dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_value_nama_pengaju"
                            android:paddingHorizontal="1dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value Nama" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingVertical="5dp"
                            android:paddingStart="20dp"
                            android:layout_width="130dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Nim"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_value_nim_pengaju"
                            android:paddingHorizontal="1dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value Nim" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingVertical="5dp"
                            android:paddingStart="20dp"
                            android:layout_width="130dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Alamat"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_value_alamat_pengaju"
                            android:paddingHorizontal="1dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value Alamat" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingVertical="5dp"
                            android:paddingStart="20dp"
                            android:layout_width="130dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Tempat/Tanggal Lahir"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_value_ttl_pengaju"
                            android:paddingHorizontal="1dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value Ttl" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingVertical="5dp"
                            android:paddingStart="20dp"
                            android:layout_width="130dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Jurusan"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" : " />

                        <TextView
                            android:id="@+id/tv_value_jurusan_pengaju"
                            android:paddingHorizontal="1dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Value Jurusan" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:paddingVertical="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@color/colorPrimaryDark"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/warnaPutih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setujui" />

        <Button
            android:textColor="@color/warnaPutih"
            android:background="@color/warnaMerah"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abaikan" />
    </LinearLayout>

</LinearLayout>