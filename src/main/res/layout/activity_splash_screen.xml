<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="#f092e5">

    <LinearLayout
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/logo_login"
            android:id="@+id/image_view_splashscreen"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="Logo" />

        <TextView
            android:textColor="@color/warnaPutih"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_marginHorizontal="60dp"
            android:id="@+id/kata_sambutan_splashscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang, anda sedang menggunakan fasilitas pengajuan surat keterangan PLJ Kampus-Sudirman Tangerang" />

    </LinearLayout>

    <TextView
        android:paddingBottom="20dp"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/warnaPutih"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:text="Copyright © Sapto Aji • Matakuliah Project SEMESTER IV "
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>